(setq initial-frame-alist
      (cons 
       '(foreground-color  . "White")
       initial-frame-alist))
(setq initial-frame-alist
      (cons 
       '(background-color  . "#456345")
       initial-frame-alist))
(setq initial-frame-alist
      (cons 
       '(cursor-color      . "Pink")
       initial-frame-alist))

;; Display settings
;; default size and color options for all frames
;; foreground, background, and cursor colors 
(setq default-frame-alist
      (cons 
       '(foreground-color  . "White")
       default-frame-alist))
(setq default-frame-alist
      (cons 
       '(background-color  . "#456345")
       default-frame-alist))
(setq default-frame-alist
      (cons 
       '(cursor-color      . "Pink")
       default-frame-alist))
